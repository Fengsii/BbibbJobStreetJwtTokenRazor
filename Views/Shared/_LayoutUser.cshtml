@using BbibbJobStreetJwtToken.Interfaces
@inject IUser UserService
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CareerConnect - Job Portal</title>
    <style>
        /* Global Styles */
        :root {
            --primary: #0a66c2;
            --primary-light: #e2f0fe;
            --secondary: #ffffff;
            --dark: #000000;
            --light-gray: #eef3f8;
            --gray: #666666;
            --dark-gray: #333333;
            --transition: all 0.3s ease;
            --border-radius: 8px;
            --box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        *::-webkit-scrollbar {
            display: none;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: var(--light-gray);
            color: var(--dark-gray);
            transition: var(--transition);
            line-height: 1.6;
            overflow-x: hidden;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        /* Header Styles */
        header {
            background-color: var(--secondary);
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: fixed;
            width: 100%;
            top: 0;
            z-index: 100;
            animation: slideDown 0.5s ease;
        }

        @@keyframes slideDown {
            from

        {
            transform: translateY(-100%);
        }

        to {
            transform: translateY(0);
        }

        }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            flex-wrap: wrap;
        }

        .logo {
            font-size: 20px;
            font-weight: bold;
            color: var(--primary);
            text-decoration: none;
            display: flex;
            align-items: center;
            margin-right: 10px;
        }

            .logo i {
                margin-right: 8px;
                font-size: 24px;
            }

        .search-bar {
            flex: 1;
            min-width: 150px;
            margin: 0 10px;
            position: relative;
            max-width: 500px;
        }

            .search-bar input {
                width: 100%;
                padding: 10px 12px 10px 35px;
                border-radius: var(--border-radius);
                border: 1px solid #ccc;
                font-size: 14px;
                transition: var(--transition);
            }

                .search-bar input:focus {
                    outline: none;
                    border-color: var(--primary);
                    box-shadow: 0 0 0 2px rgba(10, 102, 194, 0.2);
                }

            .search-bar i {
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--gray);
                font-size: 14px;
            }

        .nav-links {
            display: flex;
            list-style: none;
            flex-wrap: wrap;
            justify-content: center;
        }

            .nav-links li {
                margin-left: 8px;
            }

            .nav-links a {
                text-decoration: none;
                color: var(--gray);
                font-size: 12px;
                display: flex;
                flex-direction: column;
                align-items: center;
                transition: var(--transition);
                padding: 5px;
                min-width: 50px;
            }

                .nav-links a:hover {
                    color: var(--primary);
                }

            .nav-links i {
                font-size: 18px;
                margin-bottom: 3px;
            }

            .nav-links .active {
                color: var(--primary);
                position: relative;
            }

                .nav-links .active::after {
                    content: '';
                    position: absolute;
                    bottom: -8px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 5px;
                    height: 5px;
                    background-color: var(--primary);
                    border-radius: 50%;
                }

        .language-switcher {
            margin-left: 10px;
            position: relative;
        }

        .language-btn {
            background: none;
            border: none;
            color: var(--gray);
            cursor: pointer;
            display: flex;
            align-items: center;
            font-size: 12px;
            transition: var(--transition);
            padding: 5px;
        }

            .language-btn:hover {
                color: var(--primary);
            }

            .language-btn i {
                margin-left: 4px;
                font-size: 14px;
            }

        .profile-dropdown {
            position: relative;
            margin-left: 8px;
        }

        .profile-btn {
            background: none;
            border: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            padding: 3px;
        }

        .profile-img {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
            border: 1px solid #ddd;
            transition: var(--transition);
        }

        .profile-btn:hover .profile-img {
            box-shadow: 0 0 0 2px var(--primary);
        }

        /* Mobile menu button */
        .mobile-menu-btn {
            display: none;
            background: none;
            border: none;
            font-size: 24px;
            color: var(--gray);
            cursor: pointer;
            padding: 5px;
        }

        /* Main Content */
        main {
            margin-top: 70px;
            padding: 15px 0;
            animation: fadeIn 0.5s ease;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
        }

        to {
            opacity: 1;
        }

        }

        .content-wrapper {
            display: flex;
            gap: 15px;
        }

        /* Sidebar */
        .sidebar {
            width: 25%;
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 15px;
            position: sticky;
            top: 80px;
            height: fit-content;
            max-height: calc(100vh - 90px);
            overflow-y: auto;
            animation: slideInLeft 0.5s ease;
        }

        @@keyframes slideInLeft {
            from

        {
            transform: translateX(-20px);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }

        }

        .sidebar-section {
            margin-bottom: 20px;
        }

            .sidebar-section:last-child {
                margin-bottom: 0;
            }

        .sidebar-title {
            font-size: 15px;
            font-weight: 600;
            margin-bottom: 12px;
            color: var(--dark-gray);
            padding-bottom: 8px;
            border-bottom: 1px solid var(--light-gray);
        }

        .sidebar-link {
            display: flex;
            align-items: center;
            padding: 8px 0;
            color: var(--gray);
            text-decoration: none;
            font-size: 13px;
            transition: var(--transition);
            border-radius: 4px;
        }

            .sidebar-link:hover {
                color: var(--primary);
                background-color: var(--primary-light);
                padding-left: 8px;
            }

            .sidebar-link i {
                margin-right: 8px;
                font-size: 16px;
                width: 20px;
                text-align: center;
            }

            .sidebar-link.active {
                color: var(--primary);
                font-weight: 500;
                background-color: var(--primary-light);
                padding-left: 8px;
            }

        .sidebar-divider {
            height: 1px;
            background-color: #eee;
            margin: 12px 0;
        }

        /* Main Content Area */
        .main-content {
            flex-grow: 1;
            animation: slideInRight 0.5s ease;
            min-width: 0; /* Prevent overflow */
        }

        @@keyframes slideInRight {
            from

        {
            transform: translateX(20px);
            opacity: 0;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }

        }

        .section-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 15px;
            color: var(--dark-gray);
            position: relative;
            padding-bottom: 8px;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 40px;
                height: 3px;
                background-color: var(--primary);
                border-radius: 2px;
            }

        .job-cards {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 15px;
            margin-bottom: 25px;
        }

        .job-card {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 15px;
            transition: var(--transition);
            animation: fadeInUp 0.5s ease;
            position: relative;
            border: 1px solid transparent;
        }

        @@keyframes fadeInUp {
            from

        {
            transform: translateY(20px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }

        }

        .job-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            border-color: var(--primary-light);
        }

        .job-card-header {
            display: flex;
            align-items: flex-start;
            margin-bottom: 12px;
        }

        .company-logo {
            width: 45px;
            height: 45px;
            border-radius: 5px;
            object-fit: cover;
            margin-right: 12px;
            border: 1px solid #eee;
            flex-shrink: 0;
        }

        .job-info {
            flex-grow: 1;
            min-width: 0; /* Prevent text overflow */
        }

        .job-title {
            font-size: 15px;
            font-weight: 600;
            margin-bottom: 4px;
            color: var(--dark);
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .company-name {
            font-size: 13px;
            color: var(--gray);
            margin-bottom: 4px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .job-location {
            font-size: 12px;
            color: var(--gray);
            display: flex;
            align-items: center;
        }

            .job-location i {
                margin-right: 4px;
                font-size: 12px;
            }

        .job-save-btn {
            background: none;
            border: none;
            color: var(--gray);
            font-size: 18px;
            cursor: pointer;
            transition: var(--transition);
            padding: 4px;
            flex-shrink: 0;
        }

            .job-save-btn:hover {
                color: var(--primary);
            }

            .job-save-btn.saved {
                color: var(--primary);
            }

        .job-card-body {
            margin-bottom: 12px;
        }

        .job-description {
            font-size: 13px;
            line-height: 1.5;
            color: var(--dark-gray);
            margin-bottom: 12px;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .job-posted {
            font-size: 11px;
            color: var(--gray);
            margin-bottom: 12px;
        }

        .job-card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 8px;
        }

        .job-type {
            font-size: 11px;
            padding: 4px 8px;
            background-color: var(--light-gray);
            border-radius: 20px;
            color: var(--dark-gray);
            white-space: nowrap;
        }

        .quick-apply-btn {
            background-color: var(--primary);
            color: var(--secondary);
            border: none;
            border-radius: var(--border-radius);
            padding: 6px 12px;
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            white-space: nowrap;
        }

            .quick-apply-btn:hover {
                background-color: #004182;
                transform: translateY(-2px);
            }

        /* Hidden Sections */
        .hidden-section {
            display: none;
            animation: fadeIn 0.5s ease;
        }

        /* Notifications Section */
        .notification-card {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 12px;
            margin-bottom: 12px;
            display: flex;
            align-items: flex-start;
            transition: var(--transition);
            border-left: 3px solid transparent;
        }

            .notification-card:hover {
                transform: translateX(3px);
                border-left-color: var(--primary);
            }

        .notification-icon {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background-color: var(--light-gray);
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 12px;
            color: var(--primary);
            font-size: 16px;
            flex-shrink: 0;
        }

        .notification-content {
            flex-grow: 1;
            min-width: 0;
        }

        .notification-title {
            font-size: 13px;
            font-weight: 500;
            margin-bottom: 4px;
        }

        .notification-time {
            font-size: 11px;
            color: var(--gray);
        }

        .notification-actions {
            display: flex;
            gap: 8px;
        }

        .notification-action-btn {
            background: none;
            border: none;
            color: var(--gray);
            cursor: pointer;
            font-size: 14px;
            transition: var(--transition);
            padding: 4px;
        }

            .notification-action-btn:hover {
                color: var(--primary);
            }

        /* Saved Jobs Section */
        .saved-jobs-list {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
        }

        .saved-job-item {
            padding: 12px 15px;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
            transition: var(--transition);
        }

            .saved-job-item:last-child {
                border-bottom: none;
            }

            .saved-job-item:hover {
                background-color: var(--light-gray);
            }

        .saved-job-info {
            flex-grow: 1;
            min-width: 0;
        }

        .saved-job-title {
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 4px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .saved-job-company {
            font-size: 12px;
            color: var(--gray);
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .saved-job-actions {
            display: flex;
            gap: 8px;
        }

        .saved-job-action-btn {
            background: none;
            border: none;
            cursor: pointer;
            color: var(--gray);
            font-size: 14px;
            transition: var(--transition);
            padding: 4px;
        }

            .saved-job-action-btn:hover {
                color: var(--primary);
            }

        /* Application History Section */
        .application-history {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            overflow: hidden;
        }

        .application-item {
            padding: 12px 15px;
            border-bottom: 1px solid #eee;
            transition: var(--transition);
        }

            .application-item:last-child {
                border-bottom: none;
            }

            .application-item:hover {
                background-color: var(--light-gray);
            }

        .application-header {
            display: flex;
            align-items: center;
            margin-bottom: 8px;
        }

        .application-company-logo {
            width: 35px;
            height: 35px;
            border-radius: 5px;
            object-fit: cover;
            margin-right: 12px;
            border: 1px solid #eee;
            flex-shrink: 0;
        }

        .application-info {
            flex-grow: 1;
            min-width: 0;
        }

        .application-job-title {
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 3px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .application-company-name {
            font-size: 12px;
            color: var(--gray);
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .application-date {
            font-size: 11px;
            color: var(--gray);
        }

        .application-status {
            font-size: 11px;
            padding: 3px 8px;
            border-radius: 20px;
            margin-left: 8px;
            white-space: nowrap;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-reviewed {
            background-color: #cce5ff;
            color: #004085;
        }

        .status-rejected {
            background-color: #f8d7da;
            color: #721c24;
        }

        .status-accepted {
            background-color: #d4edda;
            color: #155724;
        }

        /* Profile Section */
        .profile-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            animation: fadeIn 0.5s ease;
        }

        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            flex-wrap: wrap;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid var(--primary);
            margin-right: 20px;
            flex-shrink: 0;
        }

        .profile-info {
            flex-grow: 1;
            min-width: 0;
        }

        .profile-name {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 5px;
            color: var(--dark);
        }

        .profile-title {
            font-size: 15px;
            color: var(--gray);
            margin-bottom: 8px;
        }

        .profile-location {
            font-size: 13px;
            color: var(--gray);
            display: flex;
            align-items: center;
            margin-bottom: 12px;
        }

            .profile-location i {
                margin-right: 5px;
            }

        .profile-edit-btn {
            background-color: var(--secondary);
            color: var(--primary);
            border: 1px solid var(--primary);
            border-radius: var(--border-radius);
            padding: 6px 12px;
            font-size: 13px;
            font-weight: 500;
            cursor: pointer;
            transition: var(--transition);
            white-space: nowrap;
        }

            .profile-edit-btn:hover {
                background-color: rgba(10, 102, 194, 0.1);
            }

        .profile-details {
            margin-bottom: 20px;
        }

        .profile-details-title {
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 12px;
            color: var(--dark-gray);
            position: relative;
            padding-bottom: 6px;
        }

            .profile-details-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 35px;
                height: 2px;
                background-color: var(--primary);
            }

        .profile-details-content {
            font-size: 13px;
            line-height: 1.6;
            color: var(--dark-gray);
        }

        .profile-skills {
            margin-bottom: 20px;
        }

        .skills-list {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .skill-tag {
            background-color: var(--light-gray);
            color: var(--dark-gray);
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 12px;
            transition: var(--transition);
        }

            .skill-tag:hover {
                background-color: var(--primary-light);
                color: var(--primary);
            }

        /* Footer */
        footer {
            background-color: var(--secondary);
            padding: 20px 0;
            margin-top: 40px;
            border-top: 1px solid #eee;
        }

        .footer-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .footer-links {
            display: flex;
            list-style: none;
            gap: 15px;
            flex-wrap: wrap;
        }

            .footer-links a {
                text-decoration: none;
                color: var(--gray);
                font-size: 13px;
                transition: var(--transition);
                padding: 4px 0;
                position: relative;
            }

                .footer-links a:hover {
                    color: var(--primary);
                }

                .footer-links a::after {
                    content: '';
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    width: 0;
                    height: 1px;
                    background-color: var(--primary);
                    transition: var(--transition);
                }

                .footer-links a:hover::after {
                    width: 100%;
                }

        .copyright {
            font-size: 13px;
            color: var(--gray);
        }

        /* Additional styles for specific sections */
        .filter-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 15px;
            margin-bottom: 15px;
        }

        .filter-group {
            margin-bottom: 12px;
        }

        .filter-title {
            font-size: 13px;
            font-weight: 600;
            margin-bottom: 6px;
            color: var(--dark-gray);
        }

        .filter-options {
            display: flex;
            flex-direction: column;
            gap: 6px;
        }

        .filter-option {
            display: flex;
            align-items: center;
            gap: 6px;
        }

            .filter-option input[type="checkbox"] {
                width: 14px;
                height: 14px;
            }

        .filter-label {
            font-size: 12px;
            color: var(--dark-gray);
        }

        .help-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 15px;
            margin-bottom: 15px;
        }

        .help-item {
            margin-bottom: 12px;
            padding-bottom: 12px;
            border-bottom: 1px solid var(--light-gray);
        }

            .help-item:last-child {
                margin-bottom: 0;
                padding-bottom: 0;
                border-bottom: none;
            }

        .help-question {
            font-size: 14px;
            font-weight: 600;
            margin-bottom: 5px;
            color: var(--dark-gray);
        }

        .help-answer {
            font-size: 13px;
            color: var(--gray);
            line-height: 1.5;
        }

        .about-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            margin-bottom: 15px;
        }

        .about-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 12px;
            color: var(--dark-gray);
        }

        .about-content {
            font-size: 14px;
            line-height: 1.6;
            color: var(--dark-gray);
        }

        .policy-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            margin-bottom: 15px;
        }

        .policy-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 12px;
            color: var(--dark-gray);
        }

        .policy-content {
            font-size: 13px;
            line-height: 1.6;
            color: var(--dark-gray);
        }

            .policy-content h3 {
                font-size: 15px;
                margin: 12px 0 6px 0;
                color: var(--dark-gray);
            }

            .policy-content p {
                margin-bottom: 8px;
            }

            .policy-content ul {
                margin-left: 18px;
                margin-bottom: 12px;
            }

        .help-center-section {
            background-color: var(--secondary);
            border-radius: var(--border-radius);
            box-shadow: var(--box-shadow);
            padding: 20px;
            margin-bottom: 15px;
        }

