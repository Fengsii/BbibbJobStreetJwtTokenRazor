    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <!-- Header -->
    <header>
        <div class="container header-container">
            <button class="mobile-menu-btn" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <a href="#" class="logo" onclick="showSection('home')">
                <i class="fas fa-briefcase"></i>
                <span>CareerConnect</span>
            </a>

            <div class="search-bar">
                <form asp-action="Index" method="get">
                    <i class="fas fa-search"></i>
                    <input type="text" name="search" placeholder="Search for jobs, companies, or keywords"
                           value="@Context.Request.Query["search"]">
                    <button type="submit" style="display: none;"></button> <!-- Hidden submit button -->
                </form>
            </div>

            <ul class="nav-links">
                <li>
                    <a href="/DashboardUser/Index" class="active" onclick="showSection('home')">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                </li>
                <li>
                    <a href="/DashboardUser/Notifications" onclick="showSection('notifications')">
                        <i class="fas fa-bell"></i>
                        <span>Notifications</span>
                    </a>
                </li>
                <li>
                    <a href="/DashboardUser/LowonganTersimpan" onclick="showSection('saved-jobs')">
                        <i class="fas fa-bookmark"></i>
                        <span>Saved</span>
                    </a>
                </li>
                <li>
                    <a href="/DashboardUser/HistoryLamaran" onclick="showSection('history')">
                        <i class="fas fa-history"></i>
                        <span>History</span>
                    </a>
                </li>
            </ul>

            <div class="language-switcher">
                <button class="language-btn" onclick="toggleLanguage()">
                    <span id="language-text">English</span>
                    <i class="fas fa-chevron-down"></i>
                </button>
            </div>

            <div class="profile-dropdown">
                <a href="/DashboardUser/UserProfile" class="profile-btn">
                    @{
                        // Ambil data user langsung dari service
                        var userProfile = UserService.GetCurrentUser();
                    }
                    @if (userProfile != null && !string.IsNullOrEmpty(userProfile.ProfileImage))
                    {
                        <img src="@userProfile.ProfileImage" alt="Profile" class="profile-img">
                    }
                    else
                    {
                        <img src="https://randomuser.me/api/portraits/men/32.jpg" alt="Profile" class="profile-img">
                    }
                </a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main>
        <div class="container">
            <div class="content-wrapper">
                <!-- Sidebar -->
                <aside class="sidebar" id="mainSidebar">
                    <div class="sidebar-section">
                        <h3 class="sidebar-title">Menu</h3>
                        <a href="/DashboardUser/Index" class="sidebar-link active" onclick="showSection('home')">
                            <i class="fas fa-home"></i>
                            <span>Home</span>
                        </a>
                        <a href="/DashboardUser/Notifications" class="sidebar-link" onclick="showSection('notifications')">
                            <i class="fas fa-bell"></i>
                            <span>Notifications</span>
                        </a>
                        <a href="/DashboardUser/LowonganTersimpan" class="sidebar-link" onclick="showSection('saved-jobs')">
                            <i class="fas fa-bookmark"></i>
                            <span>Saved Jobs</span>
                        </a>
                        <a href="/DashboardUser/HistoryLamaran" class="sidebar-link" onclick="showSection('history')">
                            <i class="fas fa-history"></i>
                            <span>Application History</span>
                        </a>
                    </div>

                    <div class="sidebar-divider"></div>

                    <div class="sidebar-section">
                        <h3 class="sidebar-title">Job Preferences</h3>
                        <a href="#" class="sidebar-link" onclick="showSection('job-alerts')">
                            <i class="fas fa-bell"></i>
                            <span>Job Alerts</span>
                        </a>
                        <a href="#" class="sidebar-link" onclick="showSection('search-filters')">
                            <i class="fas fa-filter"></i>
                            <span>Search Filters</span>
                        </a>
                        <a href="#" class="sidebar-link" onclick="showSection('career-interests')">
                            <i class="fas fa-user-cog"></i>
                            <span>Career Interests</span>
                        </a>
                    </div>

                    <div class="sidebar-divider"></div>

                    <div class="sidebar-section">
                        <h3 class="sidebar-title">Resources</h3>
                        <a href="#" class="sidebar-link" onclick="showSection('learning')">
                            <i class="fas fa-graduation-cap"></i>
                            <span>Learning</span>
                        </a>
                        <a href="#" class="sidebar-link" onclick="showSection('job-search-help')">
                            <i class="fas fa-question-circle"></i>
                            <span>Job Search Help</span>
                        </a>
                    </div>
                </aside>

                <!-- Main Content Area -->
                <div class="main-content">
                    <!-- Home Section (Default) -->
                    @RenderBody()

                    <!-- Search Filters Section (Hidden by default) -->

                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer>
        <div class="container footer-container">
            <ul class="footer-links">
                <li><a href="#" onclick="showSection('about')">About</a></li>
                <li><a href="#" onclick="showSection('privacy')">Privacy</a></li>
                <li><a href="#" onclick="showSection('terms')">Terms</a></li>
                <li><a href="#" onclick="showSection('cookie')">Cookie Policy</a></li>
                <li><a href="#" onclick="showSection('help-center')">Help Center</a></li>
            </ul>
            <p class="copyright">© 2023 CareerConnect. All rights reserved.</p>
        </div>
    </footer>

    <script>
        // Handle form submission on input change with debounce
        const searchInput = document.querySelector('.search-bar input');
        let searchTimeout;

        searchInput.addEventListener('input', function() {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                this.form.submit();
            }, 500); // Submit setelah 500ms tidak ada input
        });

        // Submit form when pressing Enter
        searchInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                this.form.submit();
            }
        });

        // Function to toggle between sections
        function showSection(sectionId) {
            // Hide all sections
            document.querySelectorAll('.hidden-section').forEach(section => {
                section.style.display = 'none';
            });

            // Show the selected section
            if (sectionId === 'home') {
                // Home section is handled by the server-side rendering
            } else {
                const sectionElement = document.getElementById(sectionId + '-section');
                if (sectionElement) {
                    sectionElement.style.display = 'block';
                }
            }

            // Update active nav link
            document.querySelectorAll('.nav-links a').forEach(link => {
                link.classList.remove('active');
            });
            document.querySelectorAll('.sidebar-link').forEach(link => {
                link.classList.remove('active');
            });

            if (sectionId === 'home') {
                document.querySelector('.nav-links li:first-child a').classList.add('active');
                document.querySelector('.sidebar-link:first-child').classList.add('active');
            } else {
                const navLink = document.querySelector(`.nav-links a[onclick="showSection('${sectionId}')"]`);
                const sidebarLink = document.querySelector(`.sidebar-link[onclick="showSection('${sectionId}')"]`);

                if (navLink) navLink.classList.add('active');
                if (sidebarLink) sidebarLink.classList.add('active');
            }

            // Scroll to top when switching sections
            window.scrollTo({ top: 0, behavior: 'smooth' });

            // Close mobile sidebar after selection
            if (window.innerWidth < 769) {
                document.getElementById('mainSidebar').classList.remove('active');
            }
        }

        // Function to toggle job save
        function toggleSave(button) {
            button.classList.toggle('saved');
            if (button.classList.contains('saved')) {
                button.innerHTML = '<i class="fas fa-bookmark"></i>';
                // In a real app, you would save this to the user's saved jobs
            } else {
                button.innerHTML = '<i class="far fa-bookmark"></i>';
                // In a real app, you would remove this from the user's saved jobs
            }
        }

        // Function to apply for a job
        function applyForJob(button) {
            button.textContent = 'Applied';
            button.style.backgroundColor = '#28a745';
            button.disabled = true;

            // In a real app, you would submit an application to the server
            setTimeout(() => {
                button.textContent = 'Quick Apply';
                button.style.backgroundColor = '';
                button.disabled = false;
            }, 2000);
        }

        // Function to toggle language
        function toggleLanguage() {
            const languageText = document.getElementById('language-text');
            if (languageText.textContent === 'English') {
                languageText.textContent = 'Indonesia';
                // In a real app, you would change all text to Indonesian
            } else {
                languageText.textContent = 'English';
                // In a real app, you would change all text to English
            }
        }

        // Mobile sidebar toggle
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            const sidebar = document.getElementById('mainSidebar');
            sidebar.classList.toggle('active');
        });

        // Close sidebar when clicking outside
        document.addEventListener('click', function(event) {
            const sidebar = document.getElementById('mainSidebar');
            const toggleBtn = document.getElementById('sidebarToggle');

            if (window.innerWidth < 769 &&
                sidebar.classList.contains('active') &&
                !sidebar.contains(event.target) &&
                !toggleBtn.contains(event.target)) {
                sidebar.classList.remove('active');
            }
        });
    </script>
</body>
</html>