        }

        .stats-grid {
            grid-template-columns: 1fr;
        }

        .modal-content {
            width: 95%;
            margin: 10% auto;
        }
    }

    @@media (max-width: 480px) {
        .profile-name {
            font-size: 1.8rem;
        }

