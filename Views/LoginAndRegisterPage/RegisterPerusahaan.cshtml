
@using BbibbJobStreetJwtToken.Models.DTO
@model RegisterPerusahaanDTO

@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daftar Akun Perusahaan - CareerConnect</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        :root {
            --primary: #2563eb;
            --primary-dark: #1d4ed8;
            --light: #ffffff;
            --dark: #1f2937;
            --gray: #6b7280;
            --light-gray: #f3f4f6;
            --company-accent: #0e7490; /* Warna biru untuk perusahaan */
        }

        *::-webkit-scrollbar {
            display: none;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            display: flex;
            min-height: 100vh;
            background-color: var(--light);
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-image: url('https://images.unsplash.com/photo-1497366754035-f200968a6e72?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1500&q=80');
            background-size: cover;
            background-position: center;
            background-blend-mode: overlay;
            background-color: rgba(255, 255, 255, 0.9);
        }

        .register-container {
            width: 100%;
            max-width: 700px;
            background: var(--light);
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            animation: fadeIn 0.5s ease-out;
        }

        @@keyframes fadeIn {
            from

        {
            opacity: 0;
            transform: translateY(-20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .company-header {
            background: var(--company-accent);
            color: white;
            padding: 25px 30px;
            text-align: center;
            position: relative;
        }

            .company-header h1 {
                font-size: 1.8rem;
                font-weight: 700;
                margin-bottom: 8px;
                display: flex;
                align-items: center;
                justify-content: center;
            }

                .company-header h1 i {
                    margin-right: 12px;
                    font-size: 1.6rem;
                }

            .company-header p {
                font-size: 1rem;
                opacity: 0.9;
            }

        .company-badge {
            position: absolute;
            top: 15px;
            right: 15px;
            background: rgba(255, 255, 255, 0.2);
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .company-form-container {
            padding: 30px;
        }

        .company-notice {
            background: #ecfdf5;
            border-left: 4px solid #10b981;
            padding: 12px 15px;
            margin-bottom: 25px;
            border-radius: 4px;
            font-size: 0.9rem;
            display: flex;
            align-items: flex-start;
        }

            .company-notice i {
                color: #10b981;
                margin-right: 10px;
                font-size: 1.1rem;
            }

        .section-title {
            font-size: 1.2rem;
            color: var(--company-accent);
            margin: 25px 0 15px 0;
            padding-bottom: 10px;
            border-bottom: 2px solid #e5e7eb;
            display: flex;
            align-items: center;
        }

            .section-title i {
                margin-right: 10px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        .form-row {
            display: flex;
            gap: 15px;
            margin-bottom: 20px;
        }

            .form-row > div {
                flex: 1;
            }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--dark);
            font-size: 0.95rem;
        }

        .input-with-icon {
            position: relative;
        }

            .input-with-icon input,
            .input-with-icon select {
                width: 100%;
                padding: 14px 14px 14px 45px;
                border: 1px solid #d1d5db;
                border-radius: 8px;
                font-size: 1rem;
                transition: all 0.3s;
            }

                .input-with-icon input:focus,
                .input-with-icon select:focus {
                    outline: none;
                    border-color: var(--company-accent);
                    box-shadow: 0 0 0 3px rgba(14, 116, 144, 0.2);
                }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray);
        }

        input[type="file"] {
            width: 100%;
            padding: 12px;
            border: 2px dashed #d1d5db;
            border-radius: 8px;
            background-color: #f9fafb;
            cursor: pointer;
            transition: all 0.3s;
        }

            input[type="file"]:hover {
                border-color: var(--company-accent);
                background-color: #f0f9ff;
            }

        .show-password-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--gray);
            cursor: pointer;
        }

        .text-danger {
            color: #ef4444;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        .btn-register {
            width: 100%;
            padding: 14px;
            background-color: var(--company-accent);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-top: 20px;
        }

            .btn-register:hover {
                background-color: #0c635c;
            }

        .password-strength {
            margin-top: 10px;
            height: 6px;
            border-radius: 3px;
            background: #e5e7eb;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            width: 0%;
            transition: width 0.3s;
            border-radius: 3px;
        }

        .password-rules {
            margin-top: 10px;
            font-size: 0.8rem;
            color: var(--gray);
        }

            .password-rules ul {
                padding-left: 20px;
                margin-top: 5px;
            }

            .password-rules li {
                margin-bottom: 3px;
            }

            .password-rules .valid {
                color: #10b981;
            }

            .password-rules .invalid {
                color: #ef4444;
            }

        .login-link {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9rem;
            color: var(--gray);
        }

            .login-link a {
                color: var(--company-accent);
                text-decoration: none;
                font-weight: 600;
            }

                .login-link a:hover {
                    text-decoration: underline;
                }

        .secure-notice {
            text-align: center;
            margin-top: 20px;
            padding: 12px;
            background: #f9fafb;
            border-radius: 8px;
            font-size: 0.85rem;
            color: var(--gray);
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .secure-notice i {
                color: #22c55e;
                margin-right: 8px;
            }

        @@media (max-width: 768px) {
            .form-row

        {
            flex-direction: column;
            gap: 0;
        }

        }

        @@media (max-width: 576px) {
            body

        {
            padding: 15px;
            background-image: none;
        }

        .register-container {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .company-header {
            padding: 20px;
        }

        .company-form-container {
            padding: 25px 20px;
        }

        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="company-header">
            <span class="company-badge">Perusahaan</span>
            <h1><i class="fas fa-building"></i> Form Pendaftaran Perusahaan</h1>
            <p>Daftarkan perusahaan Anda untuk mulai merekrut talenta terbaik</p>
        </div>

        <div class="company-form-container">
            <div class="company-notice">
                <i class="fas fa-info-circle"></i>
                <div>Isi form berikut dengan informasi lengkap perusahaan Anda. Field bertanda (*) wajib diisi.</div>
            </div>

            <form asp-controller="LoginAndRegisterPage" id="regisForm" asp-action="RegisterPerusahaan" method="post" enctype="multipart/form-data">
                <!-- Informasi Dasar Perusahaan -->
                <h3 class="section-title"><i class="fas fa-info-circle"></i> Informasi Perusahaan</h3>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="NamaPerusahaan">Nama Perusahaan*</label>
                        <div class="input-with-icon">
                            <span class="input-icon"><i class="fas fa-building"></i></span>
                            <input type="text" asp-for="NamaPerusahaan" id="NamaPerusahaan" placeholder="Masukkan nama perusahaan" required />
                        </div>
                        <span style="color:red" asp-validation-for="NamaPerusahaan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="TanggalBerdiri">Tanggal Berdiri*</label>
                        <div class="input-with-icon">
                            <span class="input-icon"><i class="fas fa-calendar-alt"></i></span>
                            <input type="date" asp-for="TanggalBerdiri" id="TanggalBerdiri" required />
                        </div>
                        <span asp-validation-for="TanggalBerdiri" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="BidangUsaha">Bidang Usaha*</label>
                    <div class="input-with-icon">
                        <span class="input-icon"><i class="fas fa-industry"></i></span>
                        <input type="text" asp-for="BidangUsaha" id="BidangUsaha" placeholder="Contoh: Teknologi, Manufaktur, Retail" required />
                    </div>
                    <span asp-validation-for="BidangUsaha" class="text-danger"></span>
                </div>

                <!-- Logo Perusahaan -->
                <div class="form-group">
                    <label for="logoInput">Logo Perusahaan</label>
                    <input type="file" asp-for="LogoPath" id="logoInput" accept="image/*" />
                    <span asp-validation-for="LogoPath" class="text-danger"></span>
                </div>

                <!-- Informasi Kontak -->
                <h3 class="section-title"><i class="fas fa-address-card"></i> Informasi Kontak</h3>

                <div class="form-row">
                    <div class="form-group">
                        <label for="Email">Email*</label>
                        <div class="input-with-icon">
                            <span class="input-icon"><i class="fas fa-envelope"></i></span>
                            <input type="email" asp-for="Email" id="Email" placeholder="email@perusahaan.com" required />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="telepon">Telepon*</label>
                        <div class="input-with-icon">
                            <span class="input-icon"><i class="fas fa-phone"></i></span>
                            <input type="tel" asp-for="Telepon" id="telepon" placeholder="081234567890" required />
                        </div>
                        <span asp-validation-for="Telepon" class="text-danger"></span>
                    </div>
                </div>

                <!-- Alamat Perusahaan -->
                <h3 class="section-title"><i class="fas fa-map-marker-alt"></i> Alamat Perusahaan</h3>

                <div class="form-group">
                    <label for="Alamat">Alamat Lengkap*</label>
                    <div class="input-with-icon">
                        <span class="input-icon"><i class="fas fa-map"></i></span>
                        <input type="text" asp-for="Alamat" id="Alamat" placeholder="Jl. Contoh No. 123" required />
                    </div>
                    <span asp-validation-for="Alamat" class="text-danger"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="Kota">Kota*</label>
                        <div class="input-with-icon">
                            <span class="input-icon"><i class="fas fa-city"></i></span>
                            <input type="text" asp-for="Kota" id="Kota" placeholder="Nama kota" required />
                        </div>
                        <span asp-validation-for="Kota" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Provinsi">Provinsi*</label>
                        <div class="input-with-icon">
                            <span class="input-icon"><i class="fas fa-globe"></i></span>
                            <select asp-for="Provinsi" class="form-control" required>
                                <option value="">-- Pilih Provinsi --</option>
                                <option>DKI Jakarta</option>
                                <option>Jawa Barat</option>
                                <option>Riau</option>
                                <option>Jawa Tengah</option>
                                <option>Jawa Timur</option>
                                <option>Banten</option>
                                <option>Bali</option>
                            </select>
                        </div>
                        <span asp-validation-for="Provinsi" class="text-danger"></span>
                    </div>
                </div>

                <!-- Akun -->
                <h3 class="section-title"><i class="fas fa-key"></i> Informasi Akun</h3>

                <div class="form-group">
                    <label for="Password">Password*</label>
                    <div class="input-with-icon">
                        <span class="input-icon"><i class="fas fa-lock"></i></span>
                        <input type="password" asp-for="Password" id="password" placeholder="Masukkan password" required onkeyup="checkPasswordStrength()" />
                        <span class="show-password-icon" onclick="togglePassword('Password')">
                            <i class="fas fa-eye"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Role" value="Perusahaan" />

                <button type="submit" class="btn-register">Daftarkan Perusahaan</button>
            </form>

            <div class="login-link">
                Sudah punya akun? <a href="/LoginAndRegisterPage/LoginPerusahaan">Login di sini</a>
            </div>

            <div class="secure-notice">
                <i class="fas fa-shield-alt"></i>
                <span>Informasi perusahaan Anda akan dijaga kerahasiaannya</span>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" /> <!-- untuk client-side validation -->
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Fungsi toggle password
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.querySelector('.show-password-icon i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.className = 'fas fa-eye-slash';
            } else {
                passwordInput.type = 'password';
                eyeIcon.className = 'fas fa-eye';
            }
        }


         document.addEventListener("DOMContentLoaded", function () {
             const form = document.getElementById('regisForm');

             form.addEventListener('submit', function (e) {
                 e.preventDefault();

                 // Tampilkan konfirmasi
                 Swal.fire({
                     title: 'Register Company?',
                     text: "Anda akan daftar sebagai company",
                     icon: 'question',
                     showCancelButton: true,
                     confirmButtonColor: '#0a66c2',
                     cancelButtonColor: '#6c757d',
                     confirmButtonText: 'Ya, Daftar',
                     cancelButtonText: 'Batal'
                 }).then((result) => {
                    if (result.isConfirmed) {
                        // Tampilkan loading
                        Swal.fire({
                            title: 'Memproses...',
                            text: 'Sedang memverifikasi pendaftaran',
                            allowOutsideClick: false,
                            didOpen: () => {
                                Swal.showLoading()
                            }
                        });

                        // Submit form
                        this.submit();
                    }
                });
            });

             // Tampilkan popup success jika ada pesan dari controller
             @if (TempData["SuccessMessage"] != null)
             {
                                 <text>
                                 Swal.fire({
                                     title: 'Berhasil!',
                                     text: '@TempData["SuccessMessage"]',
                                     icon: 'success',
                                     confirmButtonColor: '#0a66c2'
                                 });
                                 </text>
             }

             // Tampilkan popup error jika ada pesan dari controller
             @if (TempData["ErrorMessage"] != null)
             {
                                 <text>
                                 Swal.fire({
                                     title: 'Gagal!',
                                     text: '@TempData["ErrorMessage"]',
                                     icon: 'error',
                                     confirmButtonColor: '#d33'
                                 });
                                 </text>
             }
         });

    </script>
        
</body>
</html>
